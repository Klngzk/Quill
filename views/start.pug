    title Quill
.forumcontainer
  .forms-container
    .signin-signup
        form.sign-in-form(action='/login', method='post')
            p.errorMessage #{errorMessage}
                h2.title Sign in
                .input-field
                    i.fas.fa-user
                    input(type="text", name="logUsername", placeholder="Username or email", required="")
                .input-field
                    i.fas.fa-lock
                    input(type="password", name="logPassword", placeholder="Password", required="")
                input.btnf.solid(type="submit", value="Login")
                
        form#registerForm.sign-up-form(action="/register" method='post', onsubmit="event.preventDefault();validateForm();")
            p.errorMessage #{errorMessage}
            h2.title Sign up
            .input-field
                i.fas.fa-user
                input(type="text", name="firstName", placeholder="First Name", required="")
            .input-field
                i.fas.fa-user
                input(type="text", name="lastName", placeholder="Last Name", required="")
            .input-field
                i.fas.fa-portrait
                input(type="text", name="username", placeholder="Username", required="")
            .input-field
                i.fas.fa-envelope
                input(type="email", name="email", placeholder="Email", required="")
            .input-field
                i.fas.fa-lock
                input#password(type="password", name="password", placeholder="Password", required="")
            .input-field
                i.fas.fa-lock
                input#passwordConf(type="password", name="passwordConf", placeholder="Confirm Password", required="")
            input.btnf(type="submit", value="Register")
    .panels-container
        .panel.left-panel
            .content
                h3 New here ?
                p Click in the botton below to fix that!
                button#sign-up-btn.btnf.transparent Sign up
            img.image(src='img/log.svg', alt='')
        .panel.right-panel
            .content
                h3 One of us ?
                p Click in the botton below to Sign In!
                button#sign-in-btn.btnf.transparent Sign in
            img.image(src='img/register.svg', alt='')
    script.
        var passwordField = document.getElementById("password")
        var passwordConfirmField = document.getElementById("passwordConf")
        var form = document.getElementById("registerForm")
        function validateForm(){
            if(passwordField.value != passwordConfirmField.value){
                alert("Passwords do not match, Please try again.")
            }
            else{
                form.submit();
                }
        }


